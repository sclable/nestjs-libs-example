{
  "name": "nestjs-libs-example",
  "version": "0.0.1",
  "description": "",
  "author": {
    "name": "Sclable Business Solutions GmbH",
    "email": "office@sclable.com",
    "url": "https://sclable.com"
  },
  "contributors": [
    "Norbert Lehotzky <norbert.lehotzky@sclable.com>",
    "Adam Koleszar <adam.koleszar@sclable.com>"
  ],
  "license": "MIT",
  "scripts": {
    "postinstall": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lintfix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "8.4.6",
    "@nestjs/config": "2.1.0",
    "@nestjs/core": "8.4.6",
    "@nestjs/jwt": "8.0.1",
    "@nestjs/passport": "8.2.1",
    "@nestjs/platform-express": "8.4.6",
    "@sclable/nestjs-auth": "1.1.5",
    "@sclable/nestjs-queue": "1.1.5",
    "@sclable/nestjs-storage": "1.1.4",
    "minio": "7.0.28",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.5"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@commitlint/prompt-cli": "17.0.0",
    "@nestjs/cli": "8.2.6",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.6",
    "@sclable/lint": "1.7.3",
    "@types/express": "4.17.13",
    "@types/jest": "27.5.0",
    "@types/minio": "7.0.13",
    "@types/node": "18.0.1",
    "@types/supertest": "2.0.12",
    "husky": "8.0.1",
    "jest": "27.5.1",
    "lint-staged": "13.0.1",
    "supertest": "6.2.3",
    "ts-jest": "27.1.4",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --cache-location 'node_modules/.cache/.eslintcache'"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "^12.18.0 || ^14.5.0 || ^16.12.0",
    "npm": "^8.1.0"
  }
}
